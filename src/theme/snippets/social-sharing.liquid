<!-- /snippets/social-sharing.liquid -->
<div class="social-sharing">

  {% if settings.share_facebook %}
    <a target="_blank" class="button is-small" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}">
      <span class="icon">{% include 'icon-facebook' %}</span>
      <span aria-hidden="true">{{ 'general.social.share_on_facebook' | t }}</span>
      <span class="is-hidden">{{ 'general.social.alt_text.share_on_facebook' | t }}</span>
    </a>
  {% endif %}


  {% if settings.share_twitter %}
    <a target="_blank" class="button is-small" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}">
      <span class="icon">{% include 'icon-twitter' %}</span>
      <span aria-hidden="true">{{ 'general.social.share_on_twitter' | t }}</span>
      <span class="is-hidden">{{ 'general.social.alt_text.share_on_twitter' | t }}</span>
    </a>
  {% endif %}

  {% if settings.share_pinterest %}
    <a target="_blank" class="button is-small" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}">
      <span class="icon">{% include 'icon-pinterest' %}</span>
      <span aria-hidden="true">{{ 'general.social.share_on_pinterest' | t }}</span>
      <span class="is-hidden">{{ 'general.social.alt_text.share_on_pinterest' | t }}</span>
    </a>
  {% endif %}

</div>
